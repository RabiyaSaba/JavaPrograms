// need to review this program throwing exception 
// creating a 2d program to add the addition of 2nd element s
// basiaclly create fibonacci series of 2d array
import java.util.*;
public class AdditionofNextElementInArray {
	public static void main(String args[])
	{

	 Scanner scan = new Scanner(System.in);
	 System.out.println("Enter the no of row :");
	 int row = scan.nextInt();
	 System.out.println("Enter the number of col :");
	 int col = scan.nextInt();
	 // now take array 2d 
	 
	 int [] [] a= new int[row ][col];
	
	 System.out.println("Enter the array value :");
	 for(int i =0;i<row;i++)
	 {
		 for(int j =0;j<col;j++)
		 {
			 a[i][j]=scan.nextInt();
		 }
	 }
	 // for printing the addition
	 int dummy =0;
	 
	 
	 for(int i =0;i<row;i++)
	 {
		 for(int j =0;j<col;j++)
		 {
			 
			 dummy = a[i][j]+a[i+1][j+1];
			 System.out.print(" "+dummy);
			 
		 }
	 }
	 
	 
}
}

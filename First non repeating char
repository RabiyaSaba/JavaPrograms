
public class FirstNonRepeating {
	
	public static void main(String args[])
	{
		String a ="hello";
		
		// first non repeting 
		// taking first character 
		char d =a.charAt(0);
		
		//loop
		for(int i =0;i<a.length();i++)
		{
			if(d != a.charAt(i))
			{
				System.out.println("The first non repeating is :"+d);
				break;
			}
			else
			{
				d  = a.charAt(i);
			}
		}
		
		
	}

}


public class TcsCounttheGreaterthenPrevious {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		// array 
		int [] a = {2,1,3,1,4,1};
		// count 
		int count =0;
		// loop 
		for(int i =0;i<a.length-1;i++)
		{
			// now condition 
			if(a[i]>a[i+1])
			{
				count =count+1;
			}
		}
		System.out.println(+count+" element is greater then previous element ");

	}

}
